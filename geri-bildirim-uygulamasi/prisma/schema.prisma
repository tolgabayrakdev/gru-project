generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String     @id @default(uuid())
  firstName     String
  lastName      String
  email         String     @unique
  password      String
  role          Role       @default(USER)
  createdAt     DateTime   @default(now())
  updatedAt     DateTime   @updatedAt
  feedbacks     Feedback[] @relation("UserFeedbacks")
  receivedFeedbacks Feedback[] @relation("ReceivedFeedbacks")
}

model Feedback {
  id          String   @id @default(uuid())
  title       String
  content     String
  status      Status   @default(PENDING)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  userId      String
  user        User     @relation("UserFeedbacks", fields: [userId], references: [id])
  receiverId  String?
  receiver    User?    @relation("ReceivedFeedbacks", fields: [receiverId], references: [id])
}

enum Role {
  USER
  ADMIN
}

enum Status {
  PENDING
  APPROVED
  REJECTED
}
